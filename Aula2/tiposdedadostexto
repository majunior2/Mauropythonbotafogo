meu_texto = "Senac Botafogo"
print(meu_texto)

#Podemos juntar, o que chamamos de concatenar
print(f'Estou estudando no {meu_texto} agora')
print(meu_texto.upper()) # Maiúsculo
print(meu_texto.lower()) # Minúsculo
print(meu_texto.capitalize()) # Primeira letra em maiúsculo

#texto em múltiplas linhas
minhas_linhas = """linha1,
linha2
linha3"""

print(minhas_linhas)

#utilizado o caracter escape
multiplas_linhas="bola',\nbola2,\nbola3"
print(multiplas_linhas)